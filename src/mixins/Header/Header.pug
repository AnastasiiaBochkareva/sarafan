mixin Header(param = {})
    header.header
      .header__logo
        img(src="/assets/img/categories/header/logo.png", alt="logo")
      div.header__hours
        span Режим работы: пн-вс 10:00-21:00
        span Лента 08:00-22:00
      ul.header__menu
        li
          a(href="#") Контакты
        li
          a(href="#") Карта ТЦ
      .header__search
        +Input({placeholder: 'Найти магазин', type: 'search'})
      button.header__burger
        +icon('burger')
        

